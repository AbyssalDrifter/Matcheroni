  "version": "0.2.0",
  "configurations": [
    {
      "name": "c_parser_test",
      "preLaunchTask": "build_matcheroni",
      "type": "cppdbg",
      "request": "launch",
      "program": "${workspaceFolder}/bin/c_parser_test",
      "cwd": "${workspaceFolder}",
      //"args" : ["tests"],
      //"args" : ["mini_tests"],
      //"args" : ["../gcc/gcc"],
      "args" : ["../gcc/gcc/testsuite/gcc.c-torture"],
    },
    {
      "name": "benchmark",
      "preLaunchTask": "build_matcheroni",
      "type": "cppdbg",
      "request": "launch",
      "program": "${workspaceFolder}/bin/benchmark",
      "cwd": "${workspaceFolder}",
    },
    {
      "name": "regex_parser",
      "preLaunchTask": "build_matcheroni",
      "type": "cppdbg",
      "request": "launch",
      "program": "${workspaceFolder}/bin/regex_parser",
      "cwd": "${workspaceFolder}",
      "args" : ["\"(^\\d+\\s+(very)?\\s+(good|bad)\\s+[a-z]*$)\""],
    },
    {
      "name": "json_parser",
      "preLaunchTask": "build_matcheroni",
      "type": "cppdbg",
      "request": "launch",
      "program": "${workspaceFolder}/bin/json_parser",
      "cwd": "${workspaceFolder}",
      "args" : ["data/test.json"],
    }
  ]
}
